<h2>ログイン</h2>

  <h3>会員の方はこちらからログイン</h3>

<%= form_with model: @public, url: public_session_path do |f| %>
  <div class="field col-6">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field col-6">
    <%= f.label :パスワード %>
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <div class="actions col-9">
    <%= f.submit "ログイン" %>
  </div>
<% end %>

<%= render "publics/shared/links" %>
