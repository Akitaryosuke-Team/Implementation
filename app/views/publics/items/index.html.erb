<div class="container" style="margin-top:30px;">
  <div class="row">
    <div class="col-2" style="margin-right:50px;">
      <div style="border: 1px solid; width:200px; height:340px;">
      <div class="font-weight-bold d-flex justify-content-center" style="border-bottom: 1px solid; width:198px;">ジャンル検索</div>
          <% @genres.each do |genre| %>
          <div style="margin-top:10px; padding-left:10px;"><%= genre.name %></div>
        <% end %>
      </div>
    </div>

    <div class="col-9">
      <div class="lead font-weight-bold"><span style="font-size:40px; font-weight:900;">商品一覧</span>(全x件)</div>
        <div class="row">
          <% @items.each do |item| %>
          <div class="col-3 font-weight-bold" style="margin-top:30px;">
            <table>
              <tbody>
                <tr>
                  <td>
                    <%= link_to(publics_item_path(item.id)) do %>
                      <%= image_tag item.get_image(210,150) %>
                    <% end %>
                  </td>
                </tr>
                  <tr><td><%= item.name %></td></tr>
                  <tr><td>￥<%= item.add_tax_price.to_s(:delimited) %></td></tr>
              </tbody>
            </table>
          </div>
          <% end %>
        </div>
      <div class="row justify-content-md-center font-weight-bold" style="margin-top:50px;"><%= paginate @items %></div>
    </div>
  </div>
</div>
