<h2>新規会員登録</h2>

<%= form_with model: @public, url: public_registration_path, id: 'new_public', class: 'new_public', method: :post do |f| %>
  <%= render "publics/shared/error_messages", resource: resource %>

  <div class="mx-auto container">

    <div class="form-group form-inline row">
      <div class="field col-3">
        <%= f.label:名前（姓）, class: "float-left" %>
        <%= f.text_field :first_name, autofocus: true, class: "col-lg-offset-3 form-control form-control-lg w-50" %>
      </div>

      <div class="field col-3">
        <%= f.label :名前（名）, class: "float-left" %>
        <%= f.text_field :last_name, class: "col-auto form-control form-control-lg w-50" %>
      </div>
    </div>

    <div class="form-group form-inline row">
      <div class="field col-3">
        <%= f.label :名前（セイ）, class: "float-left" %>
        <%= f.text_field :first_name_kana, class: "col-auto form-control form-control-lg w-50" %>
      </div>
      <div class="field col-3">
        <%= f.label :名前（メイ）, class: "float-left" %>
        <%= f.text_field :last_name_kana, class: "col-auto form-control form-control-lg w-50" %>
      </div>
    </div>

    <div class="field col-6">
        <%= f.label :メールアドレス %>
        <%= f.email_field :email, autocomplete: "email", class: "col-auto form-control form-control-lg w-50" %>
      </div>

    <div class="field col-6">
      <%= f.label :郵便番号（ハイフン無しで入力して下さい） %>
      <%= f.text_field :postal_code, class: "col-auto form-control form-control-lg w-50" %>
    </div>

    <div class="field col-6">
      <%= f.label :住所 %>
      <%= f.text_field :address, class: "col-auto form-control form-control-lg w-100" %>
    </div>

    <div class="field col-6">
      <%= f.label :電話番号（ハイフンなし） %>
      <%= f.text_field :telephone_number, class: "col-auto form-control form-control-lg w-50" %>
    </div>

    <div class="field col-6">
      <%= f.label :"パスワード(6文字以上)" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "col-auto form-control form-control-lg w-50" %>
    </div>

    <div class="field col-6">
      <%= f.label :"パスワード(確認用)" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-auto form-control form-control-lg w-50" %>
    </div>

    
  </div>
<% end %>

<%= render "publics/shared/links" %>
