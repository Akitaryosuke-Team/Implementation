<div class="mx-auto container">
  <div class="d-flex justify-content-center font-weight-bold" style="background-color:#f5f5f5; font-size:25px; margin-left:40px; margin-bottom:30px; height:40px; width:220px;">
    会員情報編集
  </div>

<%= form_with model: @customer, url: publics_customer_path, method: :patch do |f| %>
  <div class="form-group form-inline row font-weight-bold">
    <%= f.label:氏名, class: "col-2 d-flex justify-content-start" %>
    <div class="field col-3">
      <%= f.text_field :first_name, autofocus: true, class: "col-auto form-control form-control-lg w-100" %>
    </div>
    <div class="field col-3">
      <%= f.text_field :last_name, class: "col-auto form-control form-control-lg w-100" %>
    </div>
  </div>

  <div class="form-group form-inline row font-weight-bold">
    <%= f.label :フリガナ, class: "col-2 d-flex justify-content-start" %>
    <div class="field col-3">
      <%= f.text_field :first_name_kana, class: "col-auto form-control form-control-lg w-100" %>
    </div>
    <div class="field col-3">
      <%= f.text_field :last_name_kana, class: "col-auto form-control form-control-lg w-100" %>
    </div>
  </div>

  <div class="form-group form-inline row font-weight-bold">
    <%= f.label :郵便番号, class: "col-2 d-flex justify-content-start" %>
    <div class="field col-3">
      <%= f.text_field :postal_code, class: "col-auto form-control form-control-lg w-100" %>
    </div>
  </div>

  <div class="form-group form-inline row font-weight-bold">
    <%= f.label :住所, class: "col-2 d-flex justify-content-start" %>
    <div class="field col-9">
      <%= f.text_field :address, class: "col-auto form-control form-control-lg w-100" %>
    </div>
  </div>

  <div class="form-group form-inline row font-weight-bold">
    <%= f.label :電話番号, class: "col-2 d-flex justify-content-start" %>
    <div class="field col-3">
      <%= f.text_field :telephone_number, class: "col-auto form-control form-control-lg w-100" %>
    </div>
  </div>

  <div class="form-group form-inline row font-weight-bold">
    <%= f.label :メールアドレス, class: "col-2 d-flex justify-content-start" %>
    <div class="field col-3">
      <%= f.email_field :email, autocomplete: "email", class: "col-auto form-control form-control-lg w-100" %>
    </div>
  </div>

  <div class="row d-flex justify-content-between col-10">
    <%= f.submit "編集内容を保存", class: "btn btn-success btn-lg font-weight-bold", style: "margin-left:190px; width:330px; height:50px;" %>
    <%= link_to "退会する", unsubscribe_publics_customers_path, class: "btn btn-danger btn-lg font-weight-bold", style: "width:150px; height:50px;" %>
  </div>
<% end %>
</div>