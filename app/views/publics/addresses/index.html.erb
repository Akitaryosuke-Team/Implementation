<div class="mx-auto container">
  <div class="d-flex justify-content-center font-weight-bold" style="background-color:#f5f5f5; font-size:25px; margin-left:30px; margin-bottom:30px; height:40px; width:250px;">
    配送先登録/一覧
  </div>

  <%= form_with model: @address, url: publics_addresses_path, method: :post do |f| %>
    <div class="form-group form-inline row font-weight-bold">
      <%= f.label :"郵便番号(ハイフンなし)", class: "col-3 d-flex justify-content-start" %>
      <div class="field col-3">
        <%= f.text_field :postal_code, class: "col-auto form-control form-control-lg w-100", placeholder: "0000000" %>
      </div>
    </div>

    <div class="form-group form-inline row font-weight-bold">
      <%= f.label :住所, class: "col-3 d-flex justify-content-start" %>
      <div class="field col-7">
        <%= f.text_field :address, class: "col-auto form-control form-control-lg w-100", placeholder: "東京都渋谷区代々木神園町0-0" %>
      </div>
    </div>

    <div class="form-group form-inline row font-weight-bold">
      <%= f.label :名前, class: "col-3 d-flex justify-content-start" %>
      <div class="field col-3">
        <%= f.text_field :name, autofocus: true, class: "col-auto form-control form-control-lg w-100", placeholder: "令和道子" %>
      </div>
      <%= f.submit "新規登録", class: "offset-4 btn btn-success btn-lg", style: "width:180px;" %>
    </div>
  <% end %>

  <table class="col-10 table table-borderless" style="margin-top:80px;">
    <thead>
      <tr style="height:63px;">
        <th class="border border-dark col-auto lead font-weight-bold bg-light" style="vertical-align:middle;">郵便番号</th>
        <th class="border border-dark col-auto lead font-weight-bold bg-light" style="vertical-align:middle;">住所</th>
        <th class="border border-dark col-auto lead font-weight-bold bg-light" style="vertical-align:middle;">宛名</th>
        <th class="border border-dark col-3 lead font-weight-bold bg-light" style="vertical-align:middle;"></th>
      </tr>
    </thead>
    <tbody>
      <% @addresses.each do |address| %>
      <tr>
        <td class="border border-dark lead font-weight-bold" style="vertical-align:middle;"><%= address.postal_code %></td>
        <td class="border border-dark lead font-weight-bold" style="vertical-align:middle;"><%= address.address %></td>
        <td class="border border-dark lead font-weight-bold" style="vertical-align:middle;"><%= address.name %></td>
        <td class="border border-dark lead font-weight-bold">
          <%= link_to "編集する", edit_publics_address_path(address.id), class: 'btn btn-success font-weight-bold'%>
          <%= link_to "削除する", publics_address_path(address.id), method: :delete, "deta-confirm" => "本当に消しますか？", class: 'btn btn-danger font-weight-bold destroy_address_#{@address.id}' %>
        </td>
      </tr>
      <% end %>
    </tbody>
</table>
</div>