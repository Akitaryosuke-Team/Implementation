<div class="container" style="margin-top:30px;">
  <%= form_with model: @address, url: publics_address_path, method: :patch do |f| %>
    <div class="offset-1 d-flex justify-content-center font-weight-bold" style="background-color:#f5f5f5; font-size:25px; margin-bottom:30px; height:40px; width:190px;">
      配送先編集
    </div>
    <div class="mx-auto container">

      <div class="form-group form-inline row font-weight-bold lead">
        <%= f.label :"郵便番号(ハイフンなし)", class: "col-3 d-flex justify-content-start" %>
        <div class="field col-3">
          <%= f.text_field :postal_code, class: "col-auto form-control form-control-lg w-100" %>
        </div>
      </div>

      <div class="form-group form-inline row font-weight-bold lead">
        <%= f.label :住所, class: "col-3 d-flex justify-content-start" %>
        <div class="field col-7">
          <%= f.text_field :address, class: "col-auto form-control form-control-lg w-100" %>
        </div>
      </div>

      <div class="form-group form-inline row font-weight-bold lead">
        <%= f.label :名前, class: "col-3 d-flex justify-content-start" %>
        <div class="field col-3">
          <%= f.text_field :name, autofocus: true, class: "col-auto form-control form-control-lg w-100", placeholder: "令和道子" %>
        </div>
        <%= f.submit "変更内容を保存", class: "offset-4 btn btn-success btn-lg", style: "width:180px;" %>
      </div>
    </div>
  <% end %>
</div>