<h2>配送先編集</h2>
<div class="mx-auto container">

  <div class="field col-6">
    <%= f.label :郵便番号 %>
    <%= f.text_field :postal_code, class: "col-auto form-control form-control-lg w-50" %>
  </div>

  <div class="field col-6">
    <%= f.label :住所 %>
    <%= f.text_field :address, class: "col-auto form-control form-control-lg w-100" %>
  </div>

  <div class="field col-3">
    <%= f.label:名前 %>
    <%= f.text_field :name, autofocus: true, class: "col-lg-offset-3 form-control form-control-lg w-50" %>
  </div>

  <div class="actions text-right col-9">
    <%= f.submit "変更内容を保存", class: "btn btn-success mx-auto btn-lg" %>
  </div>
</div>