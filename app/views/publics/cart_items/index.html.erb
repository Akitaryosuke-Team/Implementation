<h2>ショッピングカート</h2>
<div><%= button_to "カートを空にする", publics_cart_items_path, method: :delete %></div>
<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <%= @items.each do |item| %>
    <tr>
      <td><%= item.name %></td>
      <td><%= item.price %></td>
      <td><%= @cart_item.amount %></td>
      <td><%= item.price * @cart_item.amount %></td>
      <td><%= link_to "削除する", cart_item_path(@cart_item.id), method: :delete, "data-confirm" => "本当に消しますか？", class: 'btn btn-danger destroy_cart_item_#{@cart_item.id}' %></td>
    </tr>
    <% end %>
  </tbody>
</table>