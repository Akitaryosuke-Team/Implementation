<div class="container" style="margin-top:30px;">
  <div class="d-flex justify-content-center font-weight-bold" style="background-color:#f5f5f5; font-size:25px; margin-left:30px; height:40px; width:220px;">
    注文履歴一覧
  </div>
  <table class="table table-borderless border-bottom border-top" style="margin-top:30px;">
    <thead>
      <tr>
        <th class="border-dark font-weight-bold bg-light" style="vertical-align:middle;">購入日時</th>
        <th class="border-dark font-weight-bold bg-light" style="vertical-align:middle;">購入者</th>
        <th class="border-dark font-weight-bold bg-light" style="vertical-align:middle;">注文個数</th>
        <th class="border-dark font-weight-bold bg-light" style="vertical-align:middle;">注文ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
      <tr class="border-top font-weight-bold">
        <td class="col-3"><%= link_to order.created_at.strftime("%Y/%m/%d %H:%M:%S"), admins_order_path(order.id) %></td>
        <td class="col-3"><%= order.name %></td>
        <td class="col-3"><%= order.order_details.sum(:amount) %></td>
        <td class="col-3"><%= Order.status_methods_i18n[order.status_method] %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>