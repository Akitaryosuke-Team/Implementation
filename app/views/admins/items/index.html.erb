<div class="container" style="margin-top:30px;">
  <div class="row d-flex justify-content-between">
    <div class="d-flex justify-content-center font-weight-bold" style="background-color:#f5f5f5; font-size:25px; margin-left:30px; height:40px; width:150px;">
      商品一覧
    </div>
    <%= link_to(new_admins_item_path,class:"btn btn-outline-secondary btn-circle shadow-sm", style:"border-radius:30px;") do %>
      <i class="fas fa-plus"></i>
    <% end %>
  </div>

  <table class="table table-borderless border-bottom border-top" style="margin-top:50px;">
    <thead>
      <tr>
        <th class="border-dark font-weight-bold bg-light" style="vertical-align:middle;">商品ID</th>
        <th class="border-dark font-weight-bold bg-light" style="vertical-align:middle;">商品名</th>
        <th class="border-dark font-weight-bold bg-light" style="vertical-align:middle;">税抜価格</th>
        <th class="border-dark font-weight-bold bg-light" style="vertical-align:middle;">ジャンル</th>
        <th class="border-dark font-weight-bold bg-light" style="vertical-align:middle;">ステータス</th>
      </tr>
    </thead>

    <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= link_to "#{item.name}", admins_item_path(item.id), style: "text-decoration:underline;" %></td>
        <td><%= item.price.to_s(:delimited) %></td>
        <td><%= item.genre.name %></td>
        <td><%= item.is_active ? '販売中' : '販売停止中' %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <div class="row justify-content-md-center font-weight-bold" style="margin-top:50px;"><%= paginate @items %></div>
</div>