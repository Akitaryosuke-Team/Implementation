<div class="container" style="margin-top:30px;">
  <div class="d-flex justify-content-center font-weight-bold" style="background-color:#f5f5f5; font-size:25px; margin-left:30px; height:40px; width:170px;">
    商品編集
  </div>
  <%= form_with model: @item, url: admins_item_path, method: :patch do |f| %>

  <div class="offset-2" style="margin-top:50px;">
    <div class="form-group form-inline row font-weight-bold lead">
      <%= f.label :商品画像, class: "col-3 d-flex justify-content-start" %>
      <div class="field col-7">
        <%= f.file_field :image, accept: "image/*" %>
      </div>
    </div>

    <div class="form-group form-inline row font-weight-bold lead">
      <%= f.label :商品名, class: "col-3 d-flex justify-content-start" %>
      <div class="field col-7">
        <%= f.text_field :name, class: "col-auto form-control form-control-lg w-75" %>
      </div>
    </div>

    <div class="form-group form-inline row font-weight-bold lead">
      <%= f.label :商品説明, class: "col-3 d-flex justify-content-start" %>
      <div class="field col-7">
        <%= f.text_area :introduction, class: "col-auto form-control form-control-lg w-75" %>
      </div>
    </div>

    <div class="form-group form-inline row font-weight-bold lead">
      <%= f.label :ジャンル, class: "col-3 d-flex justify-content-start" %>
      <div class="field col-7">
        <%= f.collection_select :genre_id, Genre.all, :id, :name, :include_blank => true %>
      </div>
    </div>

    <div class="form-group form-inline row font-weight-bold lead">
      <%= f.label :税抜価格, class: "col-3 d-flex justify-content-start" %>
      <div class="field col-7">
        <%= f.text_field :price, class: "col-auto form-control form-control-lg w-75" %> 円
      </div>
    </div>

    <div class="form-group form-inline row font-weight-bold lead">
      <%= f.label :販売ステータス, class: "col-3 d-flex justify-content-start" %>
      <div class="field col-7 row d-flex align-items-center">
        <%= f.radio_button :is_active, true, style: "margin-left:20px; width:20px; height:20px;" %>
        <%= f.label :"販売中", style: "margin-left:10px;" %>
        <%= f.radio_button :is_active, false, style: "margin-left:50px; width:20px; height:20px;" %>
        <%= f.label :"販売停止中", style: "margin-left:10px;" %>
      </div>
    </div>

    <div class="row d-flex align-items-center lead">
      <%= f.submit '変更保存', class: "btn btn-success btn-lg font-weight-bold", style: "margin-left:350px; margin-top:30px; width:180px; height:60px;" %>
    </div>
  <% end %>
  </div>
</div>