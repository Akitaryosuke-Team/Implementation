<h2>ジャンル一覧・追加</h2>
  <%= form_with model: @genre, url: admins_genres_path, method: :post do |f| %>
  <div class="field">
    <%= f.label :"ジャンル名" %>
    <%= f.text_field :name %>
  </div>

  <div class="actions">
    <%= f.submit '新規登録' %>
  </div>
  <% end %>

  <table>
    <thead>
      <tr>
        <th>ジャンル</th>
      </tr>
    </thead>
    <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
      </tr>
    </tbody>
    <% end %>
  </table>
