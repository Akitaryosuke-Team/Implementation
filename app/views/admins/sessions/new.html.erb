<div class="container" style="margin-top:30px;">
  <div class="d-flex justify-content-center font-weight-bold" style="background-color:#f5f5f5; font-size:25px; margin-left:30px; margin-bottom:30px; height:40px; width:220px;">
    管理者ログイン
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group form-inline row">
      <%= f.label :メールアドレス, class: "offset-1 col-2 d-flex justify-content-start lead font-weight-bold" %>
      <div class="field col-7">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-auto form-control form-control-lg w-100", placeholder: "sample@example.com" %>
      </div>
    </div>

    <div class="form-group form-inline row">
      <%= f.label :パスワード, class: "offset-1 col-2 d-flex justify-content-start lead font-weight-bold" %>
      <div class="field col-7">
        <%= f.password_field :password, autocomplete: "current-password", class: "col-auto form-control form-control-lg w-100" %>
      </div>
    </div>

    <div class="offset-2 actions col-3" style="margin-top:50px; margin-bottom:50px;">
      <%= f.submit "ログイン", class: "offset-4 btn btn-primary w-75 font-weight-bold", style: "font-size:20px;" %>
    </div>
  <% end %>

  <%= render "admins/shared/links" %>
</div>
