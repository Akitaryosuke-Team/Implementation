<div class="container" style="margin-top:30px;">
  <div class="d-flex justify-content-center font-weight-bold" style="background-color:#f5f5f5; font-size:25px; margin-left:30px; height:40px; width:350px;">
    <%= "#{@customer.first_name}#{@customer.last_name}" %>さんの会員詳細
  </div>
  <div style="margin-top:50px;">
    <div class="form-group form-inline row lead">
      <div class="col-3" style="margin-left:30px;">会員ID</div>
      <div class="col-7">
        <%= @customer.id %>
      </div>
    </div>

    <div class="form-group form-inline row lead">
      <div class="col-3" style="margin-left:30px;">氏名</div>
      <div class="col-7">
        <%= "#{@customer.first_name}#{@customer.last_name}" %>
      </div>
    </div>

    <div class="form-group form-inline row lead">
      <div class="col-3" style="margin-left:30px;">フリガナ</div>
      <div class="col-7">
        <%= "#{@customer.first_name_kana}#{@customer.last_name_kana}" %>
      </div>
    </div>

    <div class="form-group form-inline row lead">
      <div class="col-3" style="margin-left:30px;">郵便番号</div>
      <div class="col-7">
        <%= @customer.postal_code %>
      </div>
    </div>

    <div class="form-group form-inline row lead">
      <div class="col-3" style="margin-left:30px;">住所</div>
      <div class="col-7">
        <%= @customer.address %>
      </div>
    </div>

    <div class="form-group form-inline row lead">
      <div class="col-3" style="margin-left:30px;">電話番号</div>
      <div class="col-7">
        <%= @customer.telephone_number %>
      </div>
    </div>

    <div class="form-group form-inline row lead">
      <div class="col-3" style="margin-left:30px;">メールアドレス</div>
      <div class="col-7">
        <%= @customer.email %>
      </div>
    </div>

    <div class="form-group form-inline row lead">
      <div class="col-3" style="margin-left:30px;">会員ステータス</div>
      <div class="col-7">
        <%= @customer.is_delete ? '有効' : '退会' %>
      </div>
    </div>
  </div>
  <%= link_to "編集する", edit_admins_customer_path, class: "btn btn-success btn-lg font-weight-bold", style: "margin-left:320px; margin-top:30px; width:130px; height:50px;" %>
  <%= link_to "注文履歴一覧を見る", admins_root_path, class: "btn btn-primary btn-lg font-weight-bold", style: "margin-left:100px; margin-top:30px; width:230px; height:50px;" %>
</div>