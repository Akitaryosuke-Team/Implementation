<div class="container" style="margin-top:30px;">
  <div class="d-flex justify-content-center font-weight-bold" style="background-color:#f5f5f5; font-size:25px; margin-left:30px; height:40px; width:350px;">
    <%= "#{@customer.first_name}#{@customer.last_name}" %>さんの会員情報編集
  </div>

<%= form_with model: @customer, url: admins_customer_path, method: :patch do |f| %>

    <div style="margin-top:50px;">
      <div class="form-group form-inline row lead">
        <%= f.label :会員ID, class: "col-3 d-flex justify-content-start" %>
        <div class="field col-7">
          <%= @customer.id %>
        </div>
      </div>

      <div class="form-group form-inline row lead">
        <%= f.label :氏名, class: "col-3 d-flex justify-content-start" %>
        <div class="field col-3">
          <%= f.text_field :first_name, class: "col-auto form-control form-control-lg w-100" %>
        </div>
        <div class="field col-3">
          <%= f.text_field :last_name, class: "col-auto form-control form-control-lg w-100" %>
        </div>
      </div>

      <div class="form-group form-inline row lead">
        <%= f.label :フリガナ, class: "col-3 d-flex justify-content-start" %>
        <div class="field col-3">
          <%= f.text_field :first_name_kana, class: "col-auto form-control form-control-lg w-100" %>
        </div>
        <div class="field col-3">
          <%= f.text_field :last_name_kana, class: "col-auto form-control form-control-lg w-100" %>
        </div>
      </div>

      <div class="form-group form-inline row lead">
        <%= f.label :郵便番号, class: "col-3 d-flex justify-content-start" %>
        <div class="field col-3">
          <%= f.text_field :postal_code, class: "col-auto form-control form-control-lg w-75" %>
        </div>
      </div>

      <div class="form-group form-inline row lead">
        <%= f.label :住所, class: "col-3 d-flex justify-content-start" %>
        <div class="field col-7">
          <%= f.text_field :address, class: "col-auto form-control form-control-lg w-100" %>
        </div>
      </div>

      <div class="form-group form-inline row lead">
        <%= f.label :電話番号, class: "col-3 d-flex justify-content-start" %>
        <div class="field col-3">
          <%= f.text_field :telephone_number, class: "col-auto form-control form-control-lg w-75" %>
        </div>
      </div>

      <div class="form-group form-inline row lead">
        <%= f.label :メールアドレス, class: "col-3 d-flex justify-content-start" %>
        <div class="field col-3">
          <%= f.text_field :email, class: "col-auto form-control form-control-lg w-75" %>
        </div>
      </div>

      <div class="form-group form-inline row lead">
        <%= f.label :会員ステータス, class: "col-3 d-flex justify-content-start" %>
        <div class="field col-7 row d-flex align-items-center">
          <%= f.radio_button :is_deleted, :active, checked: true, style: "margin-left:20px; width:20px; height:20px;" %>
          <%= f.label :"有効", style: "margin-left:10px;" %>
          <%= f.radio_button :is_deleted, :inactive, style: "margin-left:50px; width:20px; height:20px;" %>
          <%= f.label :"退会", style: "margin-left:10px;" %>
        </div>
    </div>
    <div class="actions col-5 font-weight-bold" style="margin-left:55px; margin-top:50px;">
      <%= f.submit "変更を保存", class: "offset-6 btn btn-success", style: "font-size:20px; width:170px;" %>
    </div>
<% end %>